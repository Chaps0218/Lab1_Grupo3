<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainMenu">

    <TextView
        android:id="@+id/tv_TituloMenu"
        android:layout_width="295dp"
        android:layout_height="71dp"
        android:text="Escoja el ejercicio que desee ejecutar"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.165" />

    <TextView
        android:id="@+id/tv_Bienvenida"
        android:layout_width="wrap_content"
        android:layout_height="49dp"
        android:text="A"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.044" />

    <RadioGroup
        android:id="@+id/rg_OpcionesMenu"
        android:layout_width="228dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_TituloMenu"
        app:layout_constraintVertical_bias="0.266">

        <RadioButton
            android:id="@+id/rb_Ejercicio1y2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@null"
            android:checked="true"
            android:layoutDirection="rtl"
            android:onClick="ejercicios1y2"
            android:text="Ejercicios 1 y 2"
            android:textAlignment="center"
            android:background="@drawable/black_border"
            android:textSize="20sp"
            android:layout_marginBottom="8dp" />

        <RadioButton
            android:id="@+id/rb_Ejercicio3y4y5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@null"
            android:checked="true"
            android:layoutDirection="rtl"
            android:onClick="ejercicios3y4y5"
            android:text="Ejercicios 3, 4 y 5"
            android:textAlignment="center"
            android:background="@drawable/black_border"
            android:textSize="20sp" />

    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <TextView
            android:id="@+id/tv_Autoria"
            android:layout_width="295dp"
            android:layout_height="71dp"
            android:text="Â©Grupo3 - Laboratorio realizado por: Mathias Guevara, Christopher Iza y Shared Tinoco"
            android:textAlignment="center"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btn_SalirMenu"
            android:layout_width="wrap_content"
            android:layout_height="51dp"
            android:layout_marginStart="16dp"
            android:backgroundTint="@android:color/holo_red_light"
            android:onClick="logout"
            android:text="Logout" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>